<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="हरीश कुमार"
            android:textSize="28sp" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/help_button"
            android:elevation="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/question" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AccNo1TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="खाता संख्या"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12365212365"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CurrentBalanceL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="शेष बैंक राशि"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CurrentBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹5,000"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/UpB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="UP"></Button>

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#EFFFFF">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="NAME"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="SEND/RECEIVE"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="AMOUNT"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="TIME"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="BALANCE"
                    android:textColor="#000"
                    android:textSize="15dp" />


            </LinearLayout>
            <LinearLayout

                android:layout_marginEnd="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b0b0b0"
                android:gravity="center_horizontal"
                android:padding="10dip"
                android:text="example1"
                android:textColor="#000"
                android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="example1"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/simple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="example1"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="example1"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="example1"
                    android:textColor="#000"
                    android:textSize="15dp" />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/DownB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DOWN">

    </Button>




</LinearLayout>